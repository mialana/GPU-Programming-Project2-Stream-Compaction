{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CUDA Make Debug Build",
            "type": "shell",
            "command": "make",
            "args": ["build", "MODE=Debug"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$nvcc"],
            "presentation": {
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false,
                "echo": true,
                "focus": false
            }
        },
        {
            "label": "CUDA Make Release Build & Run",
            "type": "shell",
            "command": "make",
            "args": ["Release"],
            "group": {
                "kind": "build",
            },
            "problemMatcher": ["$nvcc"],
            "presentation": {
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false,
                "echo": true,
                "focus": false
            }
        }
    ]
}
